@model App.Areas.HSHocSinh.Models.LopHoc

@{
    ViewData["Title"] = "Chi Tiết Lớp";
}

<partial name="_StatusMessage" />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            Sĩ Số
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HocSinhCount)
        </dd>
        <dt class = "col-sm-2">Học Sinh</dt>
        <table class="table fixed-size">
            <thead>
                <tr>
                <th scope="col">name</th>
                <th scope="col">SDT</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var HocSinhs in Model.hocSinhs) {
                    <tr>
                        <td>
                            <a class="col-sm-5" asp-controller="HocSinh" asp-action="Details" asp-route-id="@HocSinhs.Id">@HocSinhs.name</a>
                        </td>
                        <td>@HocSinhs.SDT</td>
                    </tr>
                }
            </tbody>
        </table>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@{
    _AdminSidebarService.SetActive("LopHoc", "Index", "HSHocSinh");
}
@section Sidebar
{
    @Html.Raw(_AdminSidebarService.RenderHtml())
}
