@model IEnumerable<App.Areas.HoSoHS.Models.HoSoHS>

@{
    ViewData["Title"] = "Danh Sách Hồ Sơ";
}


<partial name="_StatusMessage" />
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                @Html.DisplayNameFor(model => model.LopHoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HocSinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayNhapHoc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@(++ViewBag.postIndex)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LopHoc.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HocSinh.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayNhapHoc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_PagingXTL" model="@ViewBag.pagingModel" />
@{
    _AdminSidebarService.SetActive("HoSoHS", "Index", "HoSoHS");
}
@section Sidebar
{
    @Html.Raw(_AdminSidebarService.RenderHtml())
}
