@model App.Models.AppUser

@{
    ViewData["Title"] = "Xem Chi Tiết Học Sinh";
}


<div>
    <h4>AppUser</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SDT)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SDT)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HomeAdress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HomeAdress)
        </dd>
        <dt class = "col-sm-2">Lớp Học</dt>
        <table class="table fixed-size">
            <thead>
                <tr>
                <th scope="col">name</th>
                <th scope="col">Sĩ Số</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var LopHocs in Model.HoSoHS) {
                    <tr>
                        <td>
                            <a class="col-sm-5" asp-controller="LopHoc" asp-action="Details" asp-route-id="@LopHocs.LopHocId">@LopHocs.LopHoc.name</a>
                        </td>
                        <td>@LopHocs.LopHoc.HocSinhCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@{
    _AdminSidebarService.SetActive("HocSinh", "Index", "HoSoHS");
}
@section Sidebar
{
    @Html.Raw(_AdminSidebarService.RenderHtml())
}
