@model App.Areas.HoSoHS.Models.LopHoc

@{
    ViewData["Title"] = "Tri Tiết Lớp";
}

<partial name="_StatusMessage" />
<div>
    <h4>LopHoc</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            Sĩ Số
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HocSinhCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Slug)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Slug)
        </dd>
        <div>
            <dt class = "col-sm-10 p-6">Hoc Sinh Của Lớp</dt>
            <div class="fixed-size col-sm-12">
                @foreach (var HocSinhs in Model.HoSoHS) {
                    <div>@HocSinhs.HocSinh.UserName @HocSinhs.HocSinh.Email</div>
            }
            </div>
        </div>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@{
    _AdminSidebarService.SetActive("LopHoc", "Index", "HoSoHS");
}
@section Sidebar
{
    @Html.Raw(_AdminSidebarService.RenderHtml())
}
